font-family = JetBrains Mono

# https://github.com/ghostty-org/ghostty/issues/3219
keybind = global:opt+space=toggle_visibility

keybind = cmd+right_bracket=next_tab
keybind = cmd+left_bracket=previous_tab

# https://github.com/ghostty-org/ghostty/discussions/3187
# keybind = cmd+shift+right_bracket=move_tab:+1
# keybind = cmd+shift+left_bracket=move_tab:-1

keybind = cmd+shift+h=new_split:right
keybind = cmd+shift+v=new_split:down
keybind = cmd+up=goto_split:top
keybind = cmd+down=goto_split:bottom
keybind = cmd+left=goto_split:left
keybind = cmd+right=goto_split:right
