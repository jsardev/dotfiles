[alias]
	st = status
	br = branch
	co = checkout
	ci = commit
	cim = commit -m
	cia = commit --amend
	cp = cherry-pick
	ps = push
	psu = push -u
	pl = pull
	plr = pull --rebase
	rs = reset
	rsh = reset --hard HEAD
	rss = reset --soft HEAD
	c = clean -f -d
	d = diff
	ls = log --oneline

[pull]
	rebase = true

[rebase]
    autoStash = true

[push]
	default = current

[core]
	excludesfile = ~/.gitignore

[init]
	defaultBranch = main

[gpg]
	format = ssh

[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
	gpgsign = true

[http]
	version = HTTP/2
	postBuffer = 524288000